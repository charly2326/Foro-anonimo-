    actualizarContadores();
};

// Funci√≥n para abrir el modal de Pedidos Disponibles
function abrirModalPedidos() {
    document.getElementById("modalPedidos").style.display = "flex";
    cargarPedidos(); // Cargar los pedidos guardados
}

// Funci√≥n para cerrar el modal de Pedidos Disponibles
function cerrarModalPedidos() {
    document.getElementById("modalPedidos").style.display = "none";
}

// Funci√≥n para publicar un pedido (cuando el usuario hace una solicitud)
function publicar() {
    let textoPedido = document.getElementById("postText").value;

    if (textoPedido.trim() === "") {
        alert("Por favor, escribe una solicitud.");
        return;
    }

    // Crear un nuevo pedido
    let nuevoPedido = {
        nombre: textoPedido,
        descripcion: "Solicitud de usuario",
        estado: "Pendiente"
    };

    // Obtener pedidos guardados en localStorage
    let pedidosGuardados = localStorage.getItem("pedidos");
    let pedidos = pedidosGuardados ? JSON.parse(pedidosGuardados) : [];

    // Agregar el nuevo pedido
    pedidos.push(nuevoPedido);

    // Guardar nuevamente en localStorage
    localStorage.setItem("pedidos", JSON.stringify(pedidos));

    // Limpiar el campo de entrada
    document.getElementById("postText").value = "";

    // Refrescar la lista de pedidos
    cargarPedidos();
}

// Funci√≥n para cargar pedidos din√°micamente
function cargarPedidos() {
    let listaPedidos = document.getElementById("listaPedidos");
    if (!listaPedidos) return;

    listaPedidos.innerHTML = ""; // Limpiar antes de cargar

    // Obtener pedidos guardados en localStorage
    let pedidosGuardados = localStorage.getItem("pedidos");
    let pedidos = pedidosGuardados ? JSON.parse(pedidosGuardados) : [];

    // Mostrar cada pedido
    pedidos.forEach(pedido => {
        let pedidoElemento = document.createElement("div");
        pedidoElemento.classList.add("pedido-item");

        let estadoColor = pedido.estado === "Pendiente" ? "red" :
                          pedido.estado === "En proceso" ? "orange" : "green";

        pedidoElemento.innerHTML = `
            <h3>${pedido.nombre}</h3>
            <p>${pedido.descripcion}</p>
            <strong style="color: ${estadoColor};">${pedido.estado}</strong>
        `;
        listaPedidos.appendChild(pedidoElemento);
    });
}



