document.getElementById("switchToSellerBtn")?.addEventListener("click", async () => {
    const user = auth.currentUser;
    if (!user) {
        alert("‚ùå No hay usuario autenticado.");
        return;
    }

    try {
        const userRef = doc(db, "usuarios", user.uid);
